<launch>
  <arg name="world_name" default="$(find nndrone_description)/world/nndrone_world2.world" />

  <param command="$(find xacro)/xacro $(find nndrone_description)/urdf/nndrone.xacro" name="robot_description"/>
  <node args="-param robot_description -urdf -model nndrone -x 0.0 -y 0.0 -z 0.0 -robot_namespace nndrone" name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"/>

  <include file="$(find nndrone_description)/launch/gzserver.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="world_name" value="$(arg world_name)" />
    <arg name="debug" value="false"/>
  </include>
  <include file="$(find nndrone_description)/launch/gzclient.launch" />
</launch>
